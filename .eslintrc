{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "semi": [2, "never"],
        "no-unexpected-multiline": 2
    },
    "extends": [
        "standard",
        "plugin:flowtype/recommended"
    ],
    "plugins": [
        "flowtype"
    ]
}